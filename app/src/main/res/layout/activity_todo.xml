<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TodoActivity"
    android:background="@color/white">

  <androidx.constraintlayout.widget.ConstraintLayout
      android:id="@+id/topConstraintLayout"
      android:layout_width="match_parent"
      android:layout_height="310dp"
      android:background="@drawable/todo_gradient">

    <ImageView
        android:id="@+id/btnBack"
        android:layout_width="24dp"
        android:layout_height="44dp"
        android:contentDescription="Back Button"
        android:src="@drawable/left_arrow_sign"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="30dp"
        android:layout_marginTop="30dp"/>

    <TextView
        android:id="@+id/headerText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="To Do"
        android:textSize="30sp"
        android:textColor="@color/black"
        android:fontFamily="@font/inter_semi_bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="110dp"/>

    <TextView
        android:id="@+id/subHeaderText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="We help you know your next steps!"
        android:textSize="16sp"
        android:textColor="@color/black"
        android:fontFamily="@font/inter_medium"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/headerText"
        android:layout_marginTop="8dp"/>

    <LinearLayout
        android:id="@+id/dateLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/subHeaderText">

      <TextView
          android:id="@+id/date1"
          android:layout_width="80dp"
          android:layout_height="wrap_content"
          android:gravity="center"
          android:text="29\nOct"
          android:textSize="20sp"
          android:background="@drawable/rounded_date_background"
          android:textColor="#13548A"
          android:fontFamily="@font/inter_medium"
          android:padding="10dp"/>

      <Space
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginStart="20dp"/>

      <TextView
          android:id="@+id/date2"
          android:layout_width="110dp"
          android:layout_height="100dp"
          android:gravity="center"
          android:text="30\nOct"
          android:textSize="22sp"
          android:background="@drawable/rounded_date_background"
          android:textColor="#13548A"
          android:fontFamily="@font/inter_medium"
          android:padding="12dp"
          android:layout_marginStart="8dp"
          android:layout_marginEnd="8dp"/>

      <Space
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginStart="20dp"/>

      <TextView
          android:id="@+id/date3"
          android:layout_width="80dp"
          android:layout_height="wrap_content"
          android:gravity="center"
          android:text="31\nOct"
          android:textSize="20sp"
          android:background="@drawable/rounded_date_background"
          android:textColor="#13548A"
          android:fontFamily="@font/inter_medium"
          android:padding="10dp"/>
    </LinearLayout>


  </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
